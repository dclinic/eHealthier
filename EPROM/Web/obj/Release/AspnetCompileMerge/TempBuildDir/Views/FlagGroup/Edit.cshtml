@{ Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Flag Group";
}
<div class="box_modify" ng-controller="AddFlagGroupController">
    <form name="frmFlagGroup">
        <div class="fix-head-line">
            <div id="AdminBreadcrumb_DivBreadcrumbControl" class="breadcrumb-title breadcrumb-block"><a href="/Admin/Home"><i class="fa fa-home"></i></a><i class="fa fa-angle-right"></i><span>Flag Group</span></div>
        </div>

        <div class="fix-body-line">
            <div class="head-title">
                <span style="font-weight:bold;">Edit Flag Group</span>
            </div>
            <div class="pull-right">
                <div class="shotcut-btn pr15">
                    <a ng-click="AddFlagGroup.Methods.Put()" class="head-btn">Save</a>
                    <a ng-click="AddFlagGroup.Methods.RedirecttoList()" class="head-btn">Cancel</a>
                </div>
            </div>
        </div>

        <div ng-if="AddFlagGroup.IsLoading" class="loading-box">
        </div>
        <div class="details">
            <div class="row m0 mt10">
                <div class="col-xs-2">
                    Flag Group Name
                </div>
                <div class="col-xs-4">
                    <input type="text" class="form-control" id="FlagGroupName" ng-model="AddFlagGroup.FlagGroupName" ng-required="true" name="FlagGroupName" placeholder="Flag Group Name" />
                    <div ng-messages="frmFlagGroup.FlagGroupName.$error" ng-if="AddFlagGroup.issubmitted">
                        <div ng-message="required" class="required">Flag Group Name is required</div>
                    </div>
                </div>
            </div>

            <div class="row m0 mt10">
                <div class="col-xs-2">
                    Description
                </div>
                <div class="col-xs-4">
                    <input type="text" class="form-control" id="Description" ng-model="AddFlagGroup.Description" ng-required="true" name="Description" placeholder="Description" />
                    <div ng-messages="frmFlagGroup.Description.$error" ng-if="AddFlagGroup.issubmitted">
                        <div ng-message="required" class="required">Description is required</div>
                    </div>
                </div>
            </div>

            <div class="row m0 mt10">
                <div class="col-xs-2">
                    Display Order
                </div>
                <div class="col-xs-4">
                    <input type="number" class="form-control" id="Description" ng-model="AddFlagGroup.DisplayOrder" ng-required="true" name="DisplayOrder" placeholder="Display Order" min="1" ng-change="AddFlagGroup.Methods.CheckDisplayOrderIsExistOrNot()" />
                    <div class="required">{{ AddFlagGroup.Msg }}</div>
                </div>
            </div>

            <div class="row m0 mt10">
                <div class="col-xs-2">
                </div>
                <div class="col-xs-4">
                    <input type="checkbox" ng-model="AddFlagGroup.IsActive" checked="checked" />&nbsp;Is Active
                </div>
            </div>
        </div>
    </form>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/add-flag-group-js")
}

