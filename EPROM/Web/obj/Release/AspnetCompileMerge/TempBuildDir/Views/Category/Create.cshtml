@{ Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Category";
}
<div class="box_modify" ng-controller="AddCategoryController">
    <form name="frmCategory">
        <div class="fix-head-line">
            <div id="AdminBreadcrumb_DivBreadcrumbControl" class="breadcrumb-title breadcrumb-block">
                <a href="/Admin/Home">
                    <i class="fa fa-home"></i>
                </a>
                <i class="fa fa-angle-right"></i>
                <span>Category</span>
            </div>
        </div>

        <div class="fix-body-line">
            <div class="head-title">
                <span style="font-weight:bold;">Create Category</span>
            </div>
            <div class="pull-right">
                <div class="shotcut-btn pr15">
                    <a ng-click="AddCategory.Methods.Create()" class="head-btn">Save</a>
                    <a ng-click="AddCategory.Methods.RedirecttoList()" class="head-btn">Cancel</a>
                </div>
            </div>
        </div>
        <div ng-if="AddCategory.IsLoading" class="loading-box">
        </div>
        <div class="details">
            <div class="row m0 mt10">
                <div class="col-xs-2">
                    Category Name
                </div>
                <div class="col-xs-4">
                    <input type="text" class="form-control" id="name" ng-model="AddCategory.SurvayCategoryName" ng-required="true" name="name" placeholder="Category Name" />
                    <div ng-messages="frmCategory.name.$error" ng-if="AddCategory.issubmitted">
                        <div ng-message="required" class="required">Category Name is required</div>
                    </div>
                </div>
            </div>

            <div class="row m0 mt10">
                <div class="col-xs-2">
                    Sub Category
                </div>
                <div class="col-xs-4">
                    <select ng-model="AddCategory.ParentSurveyCategoryID" name="subcategory" ng-options="a.ID as a.SurvayCategoryName for a in AddCategory.list_category" class="form-control">
                        <option value="">Select Sub Category</option>
                    </select>
                    <div ng-messages="frmCategory.AddCategory.$error" ng-if="AddCategory.issubmitted">
                        <div ng-message="required" class="required">Category selection is required</div>
                    </div>
                </div>
            </div>

            <div class="row m0 mt10">
                <div class="col-xs-2">
                    Description
                </div>
                <div class="col-xs-4">
                    <textarea ng-model="AddCategory.Description" name="description" placeholder="Description" class="form-control"></textarea>                   
                </div>
            </div>

            <div class="row m0 mt10">
                <div class="col-xs-2">

                </div>
                <div class="col-xs-4">
                    <label class="checkbox-inline">
                        <input type="checkbox" ng-model="AddCategory.IsActive" checked="checked"> Is Active
                    </label>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/add-category-js")
}
