@model ePRom.Models.LoginModel
@{
    ViewBag.Title = "ForgotPassword";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
@using Recaptcha

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="verticalcenter login-shadow">
        <div class="reg-page">
            <div class="reg-header">
                <h2>Reset Password</h2>
            </div>
            <div class="input-group">
                @Html.ValidationSummary(true)
            </div>
            <br />
            <div class="txt-prepend input-group">
                <span class="add-on">
                    <i class="fa fa-envelope-alt"></i>
                </span>
                @Html.TextBoxFor(m => m.UserName, new { @class = "input-reg", placeholder = "Username" })
                @Html.ValidationMessageFor(m => m.UserName)
            </div>
            <div class="input-group">
                @Html.Raw(Html.GenerateCaptcha())
                @Html.ValidationMessage("recaptcha")
            </div>
            <div class="input-group">
                <div class="pull-left">
                    <a href="/admin/login" class="error-msg color-green">Back to Login</a>
                </div>

                <div class="pull-right">
                    <input type="submit" value="Submit" class="btn" />
                </div>
            </div>
        </div>
    </div>
}
