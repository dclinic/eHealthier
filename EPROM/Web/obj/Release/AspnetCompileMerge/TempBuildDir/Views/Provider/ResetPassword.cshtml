@model ePRom.Models.ResetPassword
@{
    ViewBag.Title = "Reset Password";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div style="background-color:transparent;">
    <hgroup class="title"></hgroup>
    @using (Html.BeginForm())
    {  @Html.AntiForgeryToken()

        <div class="verticalcenter">
            <div class="reg-page">

                <div class="row-fluid mt10">
                    <div class="span3">
                        @Html.LabelFor(m => m.NewPassword)
                    </div>
                    <div class="span8 mt10">
                        @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control input-reg" })
                        @Html.ValidationMessageFor(m => m.NewPassword)

                    </div>
                </div>

                <div class="row-fluid mt10">
                    <div class="span3">
                        @Html.LabelFor(m => m.ConfirmNewPassword)
                    </div>
                    <div class="span8 mt10">
                        @Html.PasswordFor(m => m.ConfirmNewPassword, new { @class = "form-control input-reg" })
                        @Html.ValidationMessageFor(m => m.ConfirmNewPassword)
                    </div>
                </div>

                <div class="row-fluid mt10">
                    <div class="span3">

                    </div>
                    <div class="span8">
                        <input type="submit" value="Reset" class="btn custom-btn login-btn" />
                    </div>
                </div>
            </div>
        </div>
    }
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


