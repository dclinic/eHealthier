@{ Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Create Pathway";
}
<div class="box_modify" ng-controller="AddPathwayController">
    <form name="frmCategory">
        <div class="fix-head-line">
            <div id="AdminBreadcrumb_DivBreadcrumbControl" class="breadcrumb-title breadcrumb-block">
                <a href="/Admin/Home">
                    <i class="fa fa-home"></i>
                </a>
                <i class="fa fa-angle-right"></i>
                <span>Pathway</span>
            </div>
        </div>

        <div class="fix-body-line">
            <div class="head-title">
                <span style="font-weight:bold;">Create Pathway</span>
            </div>
            <div class="pull-right">
                <div class="shotcut-btn pr15">
                    <button ng-click="AddPathway.Methods.Create()" class="head-btn">Create</button>
                    <button ng-click="AddPathway.Methods.RedirecttoList()" class="head-btn">Cancel</button>
                </div>
            </div>
        </div>

        <div ng-if="AddPathway.IsLoading" class="loading-box">
        </div>

        <div class="details">
            <div class="row m0 mt10">
                <div class="col-xs-2">
                    Pathway Name
                </div>
                <div class="col-xs-4">
                    <input type="text" class="form-control" id="name" ng-model="AddPathway.PathwayName" ng-required="true" name="name" placeholder="Pathway Name" />
                    <div ng-messages="frmCategory.name.$error" ng-if="AddPathway.issubmitted">
                        <div ng-message="required" class="required">Pathway Name is required</div>
                    </div>
                </div>
            </div>

            <div class="row m0 mt10">
                <div class="col-xs-2">
                    Description
                </div>
                <div class="col-xs-4">
                    <textarea ng-model="AddPathway.Description" name="description" placeholder="Description" class="form-control"></textarea>
                </div>
            </div>

            <div class="row m0 mt10">
                <div class="col-xs-2">
                    From Date
                </div>
                <div class="col-xs-4">
                    <md-datepicker md-placeholder="From Date" ng-model="AddPathway.FromDate" md-open-on-focus></md-datepicker>
                </div>
            </div>

            <div class="row m0 mt10">
                <div class="col-xs-2">
                    To Date
                </div>
                <div class="col-xs-4">
                    <md-datepicker md-placeholder="To Date" ng-model="AddPathway.ToDate" md-open-on-focus></md-datepicker>
                </div>
            </div>

            <div class="row m0 mt10">
                <div class="col-xs-2">

                </div>
                <div class="col-xs-4">
                    <label class="checkbox-inline">
                        <input type="checkbox" ng-model="AddPathway.IsActive" checked="checked"> Is Active
                    </label>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/moment-js")
    @Scripts.Render("~/bundles/add-pathway-js")
}
