@{ Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Edit Third Party App";
}
<div class="box_modify" ng-controller="AddThirdPartyAppController">
    <form name="formThirdPartyApp">
        <div class="fix-head-line">
            <div id="AdminBreadcrumb_DivBreadcrumbControl" class="breadcrumb-title breadcrumb-block">
                <a href="/Admin/Home">
                    <i class="fa fa-home"></i>
                </a>
                <i class="fa fa-angle-right"></i>
                <span>Third Party App</span>
            </div>
        </div>

        <div class="fix-body-line">
            <div class="head-title">
                <span style="font-weight:bold;">Edit Third Party App</span>
            </div>
            <div class="pull-right">
                <div class="shotcut-btn pr15">
                    <button ng-click="AddThirdPartyApp.Methods.Put()" class="head-btn">Save</button>
                    <button ng-click="AddThirdPartyApp.Methods.RedirecttoList()" class="head-btn">Cancel</button>
                </div>
            </div>
        </div>

        <div ng-if="AddThirdPartyApp.IsLoading" class="loading-box">
        </div>

        <div class="details">
            <div class="row m0 mt10">
                <div class="col-xs-2">
                    App Name
                </div>
                <div class="col-xs-4">
                    <input type="text" class="form-control" id="name" ng-model="AddThirdPartyApp.AppName" ng-required="true" name="name" placeholder="App Name" />
                    <div ng-messages="formThirdPartyApp.name.$error" ng-if="AddThirdPartyApp.issubmitted" class="mt10">
                        <div ng-message="required" class="required">App Name is required</div>
                    </div>
                </div>
            </div>

            <div class="row m0 mt10">
                <div class="col-xs-2">
                    URL
                </div>
                <div class="col-xs-4">
                    <input type="text" class="form-control" id="name" ng-model="AddThirdPartyApp.URL" name="url" placeholder="URL" />
                </div>
            </div>

            <div class="row m0 mt10">
                <div class="col-xs-2">
                    Category
                </div>
                <div class="col-xs-4">
                    <select class="form-control" ng-model="AddThirdPartyApp.SurveyCategoryID" name="SurvayCategoryName" ng-options="a.ID as a.SurvayCategoryName for a in AddThirdPartyApp.list_SurvayCategory" ng-required="true" ng-change="AddThirdPartyApp.Methods.GetSubCategoryById(AddThirdPartyApp.SurveyCategoryID)">
                        <option value="">Select Category</option>
                    </select>
                    <div ng-messages="formThirdPartyApp.SurvayCategoryName.$error" ng-if="AddThirdPartyApp.issubmitted">
                        <div ng-message="required" class="required mt15">Category selection is required</div>
                    </div>
                </div>
            </div>
            <div class="row m0 mt10">
                <div class="col-xs-2">
                    Sub Category
                </div>
                <div class="col-xs-4">
                    <select class="form-control" ng-model="AddThirdPartyApp.SurveySubCategoryID" name="subCategoryName" ng-options="a.ID as a.SurvayCategoryName for a in AddThirdPartyApp.list_SubCategory">
                        <option value="">Select Subcategory</option>
                    </select>
                </div>
            </div>
            <div class="row m0 mt10">
                <div class="col-xs-2">
                    Address
                </div>
                <div class="col-xs-4">
                    <textarea ng-model="AddThirdPartyApp.Address" name="address" placeholder="Address" class="form-control"></textarea>
                </div>
            </div>

            <div class="row m0 mt10">
                <div class="col-xs-2">
                    Email
                </div>
                <div class="col-xs-4">
                    <input type="email" class="form-control" id="email" ng-model="AddThirdPartyApp.Email" name="email" placeholder="Email" />

                    <div ng-messages="formThirdPartyApp.email.$error">
                        <div ng-message="email" class="required" style="margin-top:10px !important">Email is invalid</div>
                    </div>
                </div>
            </div>

            <div class="row m0 mt10">
                <div class="col-xs-2">
                    Mobile No
                </div>
                <div class="col-xs-4">
                    <input type="text" class="form-control" id="mobileno" ng-model="AddThirdPartyApp.MobileNo" name="mobileno" placeholder="Mobile No" numbers-Only />
                </div>
            </div>

            <div class="row m0 mt10">
                <div class="col-xs-2">
                    Phone No
                </div>
                <div class="col-xs-4">
                    <input type="text" class="form-control" id="phoneno" ng-model="AddThirdPartyApp.PhoneNo" name="phoneno" placeholder="Phone No" />
                </div>
            </div>
            <div class="row m0 mt10">
                <div class="col-xs-2">

                </div>
                <div class="col-xs-4">
                    <label class="checkbox-inline">
                        <input type="checkbox" ng-model="AddThirdPartyApp.IsActive" checked="checked"> Is Active
                    </label>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/add-thirdpartyapp-js")
}
