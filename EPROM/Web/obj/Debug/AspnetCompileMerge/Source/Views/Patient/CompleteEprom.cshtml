@{
    Layout = "";
    ViewBag.Title = "ePROMs";
    ViewBag.PageTitle = "ePROMs";
}
<script src="~/Resources/scripts/jquery-2.2.4.js"></script>
<script src="~/Resources/scripts/angular.js"></script>
<script src="~/Resources/scripts/angular-route.js"></script>
<script src="~/Resources/scripts/third-party/angular-file-upload.min.js"></script>
<script src="~/Resources/scripts/third-party/ngModelOptions.js"></script>
<script src="~/Resources/scripts/third-party/angular-ng-message.js"></script>
<script src="~/Resources/scripts/third-party/ui-bootstrap-tpls-1.2.2.js"></script>
<script src="~/Resources/scripts/third-party/ngBootbox.js"></script>
<script src="~/Resources/scripts/third-party/angular-animate-1.5.5.min.js"></script>
<script src="~/Resources/scripts/third-party/angular-aria-1.5.5.min.js"></script>
<script src="~/Resources/scripts/third-party/angular-messages-1.5.5.min.js"></script>
<script src="~/Resources/scripts/third-party/angular-material-1.1.0.min.js"></script>
<script src="~/Resources/scripts/third-party/toaster.js"></script>
<script src="~/Resources/scripts/third-party/angular-bootstrap-select.js"></script>
<script src="~/Resources/scripts/third-party/angular-cookies.js"></script>
<script src="~/Resources/scripts/third-party/angular-filter.js"></script>
<script src="~/Resources/scripts/third-party/highcharts.js"></script>
<script src="~/Resources/scripts/third-party/exporting.js"></script>
<script src="~/Resources/scripts/app.js"></script>
<link href="~/Resources/styles/bootstrap.css" rel="stylesheet" />
<link href="~/Resources/styles/font-awesome.css" rel="stylesheet" />
<link href="~/Resources/styles/reset.css" rel="stylesheet" />
<script src="~/Resources/scripts/App/PatientEpromController.js"></script>
<style>
    html, body { height: 100%; min-height: 100%; }
    #content-object { height: 100vh; width: 100%; overflow: hidden; }
    object .survey-footer { display: none !important; }
    .custom-btn { margin: 0 auto; display: block; padding: 10px 20px; color: #fff; background-color: #F4D03F; border-color: #F4D03F; }
</style>
<section ng-app="app" ng-controller="PatientEpromController">
    <div ng-if="PatientEprom.IsLoading" class="loading-box">
    </div>

    <div id="score-chart" class="modified-chart mb15" ng-hide="true"></div>

    <div class="row">
        <div class="col-xs-12 text-center">
            <span class="icon-check-parent">
                <i class="fa fa-check icon-check" aria-hidden="true"></i>
            </span>
        </div>
    </div>
    <div class="row mt25">
        <div class="col-xs-12 text-center">
            <h2 class="b600 mb10">Thank You,</h2>
            <h4 class="mb10">Your Response has been received</h4>
            <h4 class="mb30" ng-if="PatientEprom.IsCompleted">Your Score for this ePROM has been sent to your registered Email</h4>
            <h4 class="mb30" ng-if="!PatientEprom.IsCompleted">Scoring not complete. please contact your provider.</h4>
        </div>
    </div>
    <div class="row mt80">
        <div class="col-xs-12 text-center">
            <button class="btn btn-default yellow-btn" type="button" onclick="parent.window.location.href = '/Patient/PatientDashboard'">MY DASHBOARD</button>

            <button class="ml15 btn btn-default yellow-btn" type="button" onclick="parent.window.location.href = '/Patient/PatientEprom'">My ePROMs</button>
        </div>
    </div>
</section>
@section Scripts {
    @Scripts.Render("~/bundles/patient-eprom-js")
}