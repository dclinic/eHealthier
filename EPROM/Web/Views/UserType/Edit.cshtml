@{ Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "User Type";
}
<div class="box_modify" ng-controller="AddUTController">
    <form name="frmAddUT">
        <div class="fix-head-line">
            <div id="AdminBreadcrumb_DivBreadcrumbControl" class="breadcrumb-title breadcrumb-block"><a href="/Admin/Home"><i class="fa fa-home"></i></a><i class="fa fa-angle-right"></i><span>User Type</span></div>
        </div>

        <div class="fix-body-line">
            <div class="head-title">
                <span style="font-weight:bold;">Edit User Type</span>
            </div>
            <div class="pull-right">
                <div class="shotcut-btn pr15">
                    <a ng-click="AddUT.Methods.Put()" class="head-btn">Save</a>
                    <a ng-click="AddUT.Methods.RedirecttoList()" class="head-btn">Cancel</a>
                </div>
            </div>
        </div>
        <div ng-if="AddUT.IsLoading" class="loading-box">
        </div>
        <div class="details">
            <div class="row m0 mt10">
                <div class="col-xs-2">
                    User Type
                </div>
                <div class="col-xs-4">
                    <input type="text" class="form-control" id="name" ng-model="AddUT.UserType1" ng-required="true" name="name" placeholder="User Type" />
                    <div ng-messages="frmAddUT.name.$error" ng-if="AddUT.issubmitted">
                        <div ng-message="required" class="required">User Type is required</div>
                    </div>
                </div>
            </div>

            <div class="row m0 mt10">
                <div class="col-xs-2">

                </div>
                <div class="col-xs-4">
                    <label class="checkbox-inline">
                        <input type="checkbox" ng-model="AddUT.IsActive" checked="checked"> Is Active
                    </label>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/add-ut-js")
}
