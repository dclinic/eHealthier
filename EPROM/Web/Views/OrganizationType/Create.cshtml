@{ Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Organization Type";
}
<div class="box_modify" ng-controller="AddOTController">
    <form name="frmAddOT">
        <div class="fix-head-line">
            <div id="AdminBreadcrumb_DivBreadcrumbControl" class="breadcrumb-title breadcrumb-block">
                <a href="/Admin/Home">
                    <i class="fa fa-home"></i>
                </a>
                <i class="fa fa-angle-right"></i>
                <span>Organization Type</span>
            </div>
        </div>

        <div class="fix-body-line">
            <div class="head-title">
                <span style="font-weight:bold;">Create Organization Type</span>
            </div>
            <div class="pull-right">
                <div class="shotcut-btn pr15">
                    <a ng-click="AddOT.Methods.Create()" class="head-btn">Save</a>
                    <a ng-click="AddOT.Methods.RedirecttoList()" class="head-btn">Cancel</a>
                </div>
            </div>
        </div>
        <div ng-if="AddOT.IsLoading" class="loading-box">
        </div>
        <div class="details">
            <div class="row m0 mt10">
                <div class="col-xs-2">
                    Organization Type
                </div>
                <div class="col-xs-4">
                    <input type="text" class="form-control" id="name" ng-model="AddOT.OrganizationType1" ng-required="true" name="name" placeholder="Organization Type" />
                    <div ng-messages="frmAddOT.name.$error" ng-if="AddOT.issubmitted">
                        <div ng-message="required" class="required">Organization Type is required</div>
                    </div>
                </div>
            </div>

            <div class="row m0 mt10">
                <div class="col-xs-2">

                </div>
                <div class="col-xs-4">
                    <label class="checkbox-inline">
                        <input type="checkbox" ng-model="AddOT.IsActive" checked="checked"> Is Active
                    </label>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/add-ot-js")
}
